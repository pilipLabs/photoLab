{% set application = 'PhotoLab' %}
{% set language    = 'en' %}
{% set meta = {
    'author' : 'PilipLabs',
    'description' : ''
   }
%}
{% set cdn_domains = [
        'cdnjs.cloudflare.com',
        'html5shim.googlecode.com',
   ]
%}

<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="{{ language }}"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="{{ language }}"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="{{ language }}"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ language }}"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        {% for domain in cdn_domains %}
            <link rel="dns-prefetch" href="{{ domain }}" />
        {% endfor %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}{% endblock %}{{ application }}</title>
        {% block meta %}
            <meta name="description" content="{{ meta.description }}">
            <meta name="author" content="{{ meta.author }}">
        {% endblock %}

        <meta name="viewport" content="width=device-width">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% stylesheets filter='less' combine=true output='/assets/screen.css'
            '../vendor/twitter/bootstrap/less/bootstrap.less'
            '../vendor/twitter/bootstrap/less/responsive.less'
            'css/my.css'
        %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}

        <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.1/modernizr.min.js"></script>
    </head>

    <body>

<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

       <div class="logo-header center"> <img src="http://placehold.it/500x180"> </div>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/">{{ application }}</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            {% block nav %}{% endblock %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {% block body %}
        {% endblock %}

        {% block javascripts %}
        {% javascripts output='/assets/scripts.js'
            '../vendor/twitter/bootstrap/docs/assets/js/jquery.js'
            '../vendor/twitter/bootstrap/docs/assets/js/bootstrap.min.js'
            'assets/my.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
